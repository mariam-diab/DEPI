
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<MVC002.Models.Product>
<h1>Product List</h1>
<a href="/Products/Create" class="btn btn-dark">Add New Product</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Production Date</th>
            <th>Stock</th>
            <th>Is Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.ProductionDate.ToShortDateString()</td>
                <td>@product.Stock</td>
                <td>@product.IsActive</td>
            </tr>
        }
    </tbody>
</table>