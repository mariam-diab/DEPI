
@{
    ViewData["Title"] = "Create";
}

<h1>Create Product</h1>
<div class="row">
    <div class="col-md-4">
        <form action="/Product/Create" method="post">
            <div class="form-group">
                <label class="control-label">Product Name</label>
                <input type="text" name="ProductName" value="" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Price</label>
                <input type="number" name="Price" step="0.01" value="" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Production Date</label>
                <input type="date" name="ProductionDate" value="" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Stock</label>
                <input type="number" name="Stock" value="" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label">Is Active</label>
                <input type="checkbox" name="IsActive" class="form-check-input" />
            </div>

            <input type="submit" value="Create Product" class="btn btn-primary" />
        </form>
    </div>
</div>
<div>
    <a href="/Products" class="btn btn-dark">Back to the List</a>
</div>
